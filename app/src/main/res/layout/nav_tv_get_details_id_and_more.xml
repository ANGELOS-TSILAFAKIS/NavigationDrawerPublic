<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tv_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    android:padding="5dp"

    android:gravity="center_vertical"
    android:minHeight="72dp"
    tools:context="info.android_angel.navigationdrawer.activity_tv.Show_TV_Details_ID">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/backdrop_path_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/star"

                    android:scaleType="centerCrop"

                    app:layout_collapseMode="parallax" />

            </LinearLayout>

            <!--  name  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_write_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@color/background_titles_details"
                    android:paddingRight="16dp"
                    android:text="@string/TV_Name_of_the_TV_series"
                    android:textColor="@color/text_color_titles_details"
                    android:textSize="@dimen/movie_details_activity_title"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:paddingRight="16dp"
                    android:textColor="@color/text_color_details"
                    android:textSize="12sp"
                    />

            </LinearLayout>

            <!--  first_air_date  --><!--  last_air_date  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!--  first_air_date  -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:id="@+id/first_air_date_write_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:background="@color/background_titles_details"
                        android:paddingRight="16dp"
                        android:text="@string/TV_First_air_date"
                        android:textColor="@color/text_color_titles_details"
                        android:textSize="@dimen/movie_details_activity_title"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/first_air_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:paddingRight="16dp"
                        android:textColor="@color/text_color_details"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!--  last_air_date  -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:id="@+id/last_air_date_write_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:background="@color/background_titles_details"
                        android:paddingRight="16dp"
                        android:text="@string/TV_Last_air_date"
                        android:textColor="@color/text_color_titles_details"
                        android:textSize="@dimen/movie_details_activity_title"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/last_air_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:paddingRight="16dp"
                        android:textColor="@color/text_color_details"
                        android:textSize="12sp"
                        />

                </LinearLayout>
            </LinearLayout>

            <!--  popularity  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/popularity_write_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@color/background_titles_details"
                    android:paddingRight="16dp"
                    android:text="@string/TV_Popularity"
                    android:textColor="@color/text_color_titles_details"
                    android:textSize="@dimen/movie_details_activity_title"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/popularity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:paddingRight="16dp"
                    android:textColor="@color/text_color_details"
                    android:textSize="12sp"
                    />

            </LinearLayout>

            <!--  homepage  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/homepage_write_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="@color/background_titles_details"
                    android:paddingRight="16dp"
                    android:text="@string/TV_Homepage"
                    android:textColor="@color/text_color_titles_details"
                    android:textSize="@dimen/movie_details_activity_title"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/homepage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:paddingRight="16dp"
                    android:textColor="@color/text_color_details"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!--  number_of_episodes  --><!--  number_of_seasons  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!--  number_of_episodes  -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:id="@+id/number_of_episodes_write_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:background="@color/background_titles_details"
                        android:paddingRight="16dp"
                        android:text="@string/TV_Number_of_episodes"
                        android:textColor="@color/text_color_titles_details"
                        android:textSize="@dimen/movie_details_activity_title"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/number_of_episodes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:paddingRight="16dp"
                        android:textColor="@color/text_color_details"
                        android:textSize="12sp"
                        />

                </LinearLayout>

                <!--  number_of_seasons  -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:id="@+id/number_of_seasons_write_text5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:background="@color/background_titles_details"
                        android:paddingRight="16dp"
                        android:text="@string/TV_Number_of_seasons"
                        android:textColor="@color/text_color_titles_details"
                        android:textSize="@dimen/movie_details_activity_title"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/number_of_seasons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:paddingRight="16dp"
                        android:textColor="@color/text_color_details"
                        android:textSize="12sp"
                        />

                </LinearLayout>
            </LinearLayout>

            <!--  original_language  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/original_language_write_text6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@color/background_titles_details"
                    android:paddingRight="16dp"
                    android:text="@string/TV_Language"
                    android:textColor="@color/text_color_titles_details"
                    android:textSize="@dimen/movie_details_activity_title"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/original_language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:paddingRight="16dp"
                    android:textColor="@color/text_color_details"
                    android:textSize="12sp"
                    />

            </LinearLayout>

            <!--  original_name  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/original_name_write_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@color/background_titles_details"
                    android:paddingRight="16dp"
                    android:text="@string/TV_Original_name"
                    android:textColor="@color/text_color_titles_details"
                    android:textSize="@dimen/movie_details_activity_title"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/original_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:paddingRight="16dp"
                    android:textColor="@color/text_color_details"
                    android:textSize="12sp"
                    />

            </LinearLayout>

            <!--  overview  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/overview_write_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@color/background_titles_details"
                    android:paddingRight="16dp"
                    android:text="@string/TV_Description"
                    android:textColor="@color/text_color_titles_details"
                    android:textSize="@dimen/movie_details_activity_title"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/overview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:paddingRight="16dp"
                    android:textColor="@color/text_color_details"
                    android:textSize="12sp"
                    />

            </LinearLayout>

            <!--  vote_average  --><!--  vote_count  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!--  vote_average  -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:id="@+id/vote_average_write_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:background="@color/background_titles_details"
                        android:paddingRight="16dp"
                        android:text="@string/TV_Rating"
                        android:textColor="@color/text_color_titles_details"
                        android:textSize="@dimen/movie_details_activity_title"
                        android:textStyle="bold"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:orientation="horizontal"

                        >

                        <ImageView
                            android:id="@+id/rating_image"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerInParent="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/star"
                            android:tint="@color/colorOfStar" />

                        <TextView
                            android:id="@+id/vote_average"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="5.0"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            />
                    </LinearLayout>

                </LinearLayout>

                <!--  vote_count  -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:id="@+id/vote_count_write_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:background="@color/background_titles_details"
                        android:paddingRight="16dp"
                        android:text="@string/TV_Vote_count"
                        android:textColor="@color/text_color_titles_details"
                        android:textSize="@dimen/movie_details_activity_title"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/vote_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:paddingRight="16dp"
                        android:textColor="@color/text_color_details"
                        android:textSize="12sp"
                        />

                </LinearLayout>

            </LinearLayout>


            <!-- images_recycler_view-->
            <TextView
                android:id="@+id/images_write_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_titles_details"
                android:paddingLeft="16dp"
                android:text="@string/TV_images_recycler_view"
                android:textColor="@color/text_color_titles_details"
                android:textSize="@dimen/movie_details_activity_title"
                android:textStyle="bold"
                />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <!-- android:orientation="vertical"
                android:orientation="horizontal"
                android:scrollbars="horizontal"
                -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/images_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:dividerHeight="1dp" />
                </LinearLayout>
            </HorizontalScrollView>



        <!--  END -->
        </LinearLayout>

    </ScrollView>
</LinearLayout>