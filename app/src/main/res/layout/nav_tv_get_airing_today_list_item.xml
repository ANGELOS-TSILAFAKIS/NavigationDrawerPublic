<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tvs_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    android:padding="5dp"

    android:gravity="center_vertical"
    android:minHeight="72dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="80dp"
            android:minWidth="80dp"
            android:maxWidth="100dp"
            android:maxHeight="100dp"
            android:id="@+id/tv_poster_path_view"
            android:background="@drawable/star"
            android:scaleType="centerCrop"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Album id / Hidden by default -->
            <TextView
                android:id="@+id/tv_id"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />
            <!--name_write_text -->
            <TextView
                android:id="@+id/name_write_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="@color/background_titles_details"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:text="@string/TV_Name_of_the_TV_series"
                android:textColor="@color/text_color_titles_details"
                android:textSize="@dimen/movie_details_activity_title"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_title_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/movie_details_activity_big_letters_up" />
            <!--first_air_date_write_text -->
            <TextView
                android:id="@+id/first_air_date_write_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="@color/background_titles_details"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:text="@string/TV_First_air_date"
                android:textColor="@color/text_color_titles_details"
                android:textSize="@dimen/movie_details_activity_title"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_release_date_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:textColor="@color/colorGreyLight"
                android:textSize="@dimen/movie_details_activity_small_letters_down"
                />

           <!-- vote_average_write_text  -->
            <TextView
                android:id="@+id/vote_average_write_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="@color/background_titles_details"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:text="@string/TV_Rating"
                android:textColor="@color/text_color_titles_details"
                android:textSize="@dimen/movie_details_activity_title"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                >

                <ImageView
                    android:id="@+id/rating_image"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/star"
                    android:tint="@color/colorOfStar"
                    android:layout_marginTop="2sp"
                    />

                <TextView
                    android:id="@+id/tv_vote_average_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="5.0" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!--LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"-->

    <!-- overview_write_text  -->
    <TextView
        android:id="@+id/overview_write_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@color/background_titles_details"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:text="@string/TV_Description"
        android:textColor="@color/text_color_titles_details"
        android:textSize="@dimen/movie_details_activity_title"
        android:textStyle="bold"
        />

        <TextView
            android:id="@+id/tv_overview_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="30"
            android:minLines="3"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:textColor="@color/colorGreyLight"
            android:textSize="@dimen/movie_details_activity_small_letters_down"
            />

    <!--/LinearLayout-->

</LinearLayout>